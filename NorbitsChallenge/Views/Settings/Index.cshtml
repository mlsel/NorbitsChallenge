@model SettingsViewModel

<h2>Innstillinger</h2>

<form asp-action="Update">
        @foreach (var setting in Model.Settings)
        {
            <div class="row">
                <div class="col-sm-2">
                    <b>@setting.Key</b>
                </div>
                <div class="col-sm-8">
                    <input name="Setting.Value" value="@setting.Value" class="form-control" />
                </div>
                <div class="col-sm-2">
                    <input type="submit" class="btn btn-secondary" value="Lagre" />
                </div>
            </div>
            <input type="hidden" name="CompanyId" value="@setting.CompanyId" />
            <input type="hidden" name="Setting.Key" value="@setting.Key" />
        }
</form>

