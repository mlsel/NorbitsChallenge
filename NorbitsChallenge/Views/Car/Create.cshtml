@{
    ViewData["Title"] = "Legg til ny bil";
}

@model NorbitsChallenge.Models.Car

<h2>Legg til ny bil</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-2">
        <label asp-for="LicensePlate">Registreringsnummer</label>
        <input asp-for="LicensePlate" class="form-control" required />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Model">Modell</label>
        <input asp-for="Model" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Brand">Merke</label>
        <input asp-for="Brand" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Description">Beskrivelse</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group mb-2">
        <label asp-for="TireCount">Dekk</label>
        <input asp-for="TireCount" type="number" class="form-control" />
    </div>
    
    <!-- Setter til "hidden" sidan value er alltid CompanyId -->
    <input type="hidden" asp-for="CompanyId" value="@Model.CompanyId" />

    <button type="submit" class="btn btn-success">Lagre</button>
</form>

